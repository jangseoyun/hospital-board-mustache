{{>layouts/header}}
<div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">제목</th>
            <th scope="col">내용</th>
        </tr>
        </thead>

        <tbody>
        {{#articleList}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{title}}</td>
                <td>{{contents}}</td>
                <td>
                    <form action="/articels/"+{{id}} method="post">
                        <input type="hidden" name="_method" value="DELETE"/>
                        <button type="button" class="btn btn-outline-danger btn-sm">DELETE</button>
                    </form>
                </td>
            </tr>
        {{/articleList}}
        </tbody>
    </table>
</div>
{{>layouts/footer}}